<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SplashScreenActivity"
    android:background="#fefae0"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:transitionName="lottie_img"
        android:id="@+id/lottieAnimationView"
        android:layout_width="405dp"
        android:layout_height="329dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/caranim">

    </com.airbnb.lottie.LottieAnimationView>

    <ImageView
        android:id="@+id/splashScreenLogo"
        android:layout_width="83dp"
        android:layout_height="41dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/reallogo"
        android:textAlignment="center"
        android:textSize="70sp"
        android:transitionName="logo_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:transitionName="text_img"
        android:id="@+id/textView2"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="102dp"
        android:fontFamily="@font/bungee"
        android:text="Drive. Thrive. Arrive."
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenLogo" />
</androidx.constraintlayout.widget.ConstraintLayout>