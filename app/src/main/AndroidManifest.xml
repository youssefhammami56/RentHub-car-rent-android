<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SENDTO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/reallogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RentHub"
        tools:targetApi="31">
        <activity
            android:name=".Views.LeaseActivity"
            android:exported="false" />
        <activity
            android:name=".Views.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".Views.RentCarActivity"
            android:exported="false" />
        <activity
            android:name=".Views.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Views.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".Views.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Views.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".Views.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Views.HomeActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>